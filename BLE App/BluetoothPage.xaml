<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BLE_App.BluetoothPage"
             Title="BluetoothPage">

    <VerticalStackLayout>
        <Label
            Text="Bluetooth"
            TextColor="Blue"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />
        <Label
            x:Name="statusLabel"
            Text="Bluetooth Status: Disconnected" />


        <ListView ItemsSource="{Binding BluetoothDevices}" x:Name="btDevicesListView" ItemSelected="btDevicesListView_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell
                        Text="{Binding Name}"
                        Detail="PLACEHOLDER"
                        TextColor="White"/>
                        
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button
            Text="Discover"
            Clicked="Discover_Button_Clicked"/>

        <Button
            x:Name="connectButton"
            Text="Connect"
            Clicked="Connect_Button_Clicked"/>

        <Button
            x:Name="getCharacteristicsButton"
            Text="Connect"
            Clicked="Characteristics_Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>