<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BLE_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BLE_App"
    Shell.FlyoutBehavior="Disabled"
    Title="BLE_App">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Bluetooth"
            ContentTemplate="{DataTemplate local:Bluetooth_Devices}"
            Route="Bluetooth_Devices" />
    </TabBar>
    
</Shell>
